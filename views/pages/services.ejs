    <script>
        // Format phone number input as user types
        document.getElementById('bookingPhone')?.addEventListener('input', function(e) {
            const phone = e.target.value.replace(/\D/g, '');
            if (phone.length <= 10) {
                if (phone.length >= 6) {
                    e.target.value = `(${phone.slice(0, 3)}) ${phone.slice(3, 6)}-${phone.slice(6)}`;
                } else if (phone.length >= 3) {
                    e.target.value = `(${phone.slice(0, 3)}) ${phone.slice(3)}`;
                } else {
                    e.target.value = phone;
                }
            }
        });
    </script>
