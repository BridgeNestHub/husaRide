{
  "name": "husaride",
  "version": "1.0.0",
  "description": "A ride-hailing platform connecting passengers and drivers",
  "main": "dist/src/app.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 \"src/views/**\" \"src/public/**\" dist",
    "start": "node dist/src/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "watch": "tsc -w"
  },
  "keywords": [
    "ride-hailing",
    "transportation",
    "booking"
  ],
  "author": "HusaRide Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "sitemap": "^8.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "copyfiles": "^2.4.1"
  }
}